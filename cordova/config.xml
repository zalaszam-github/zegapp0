<?xml version='1.0' encoding='utf-8'?>
<widget 
	id="hu.copas.tabris" 
	version="1.0.0"
	xmlns:gap="http://phonegap.com/ns/1.0"
	xmlns="http://www.w3.org/ns/widgets"
	xmlns:cdv="http://cordova.apache.org/ns/1.0"
>	

  <name>ZegDemo</name>
  <description>Zalaegerszeg Demo App</description>
  <author email="copas@zalaszam.hu" href="https://www.zalaszam.hu">
   Zalaszam Dev Team
  </author>
  
  <access origin="*" />
  
	<platform name="ios">
        <!-- iOS 8.0+ -->
        <icon src="icons/ios/Icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="icons/ios/Icon-60.png" width="60" height="60" />
        <icon src="icons/ios/Icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="icons/ios/Icon-76.png" width="76" height="76" />
        <icon src="icons/ios/Icon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="icons/ios/Icon-Spotlight-40.png" width="40" height="40" />
        <icon src="icons/ios/Icon-Spotlight-40@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="icons/ios/Icon.png" width="57" height="57" />
        <icon src="icons/ios/Icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="icons/ios/Icon-72.png" width="72" height="72" />
        <icon src="icons/ios/Icon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="icons/ios/Icon-Small.png" width="29" height="29" />
        <icon src="icons/ios/Icon-Small@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="icons/ios/Icon-50.png" width="50" height="50" />
        <icon src="icons/ios/Icon-50@2x.png" width="100" height="100" />
    </platform>
 
    <platform name="android">
        <icon src="icons/android/drawable-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="icons/android/drawable-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="icons/android/drawable-xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="icons/android/drawable-xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="icons/android/drawable-xxxhdpi/ic_launcher.png" density="xxxhdpi" />
    </platform>
	
	<preference name="EnableDeveloperConsole" value="true"/>
	
	<gap:plugin name="cordova-plugin-camera" />
	<gap:plugin name="cordova-plugin-dialogs" />
	<gap:plugin name="cordova-plugin-geolocation" />
	<gap:plugin name="cordova-plugin-barcodescanner" />
	<gap:plugin name="https://github.com/copas2/phonegap-maplauncher" />
	<gap:plugin name="nl.x-services.plugins.toast" source="plugins.cordova.io" />
	<gap:plugin name="uk.co.ilee.directions" source="plugins.cordova.io" />
	<gap:plugin name="com.vitorventurin.gps" source="plugins.cordova.io" />
	
</widget>